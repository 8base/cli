{
    "compilerOptions": {
        "diagnostics": true,
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "lib": [ "es2016", "esnext.asynciterable", "es2016.array.include", "dom" ],
        "moduleResolution": "node",        
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,        
        "outDir": "dist",
        "baseUrl": ".",
        "allowJs": true,
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types"
        ],        
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "template"
    ]
}