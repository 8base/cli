{
  "compilerOptions": {
    "diagnostics": true,
    "declaration": true,
    "declarationMap": true,
    "module": "CommonJS",
    "target": "ES2016",
    "noImplicitAny": true,
    "lib": ["es2017", "esnext.asynciterable", "es2016.array.include", "dom"],
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "*": ["types/*"]
    }
  },
  "include": ["src/**/*"]
}
