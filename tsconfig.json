{
    "compilerOptions": {
        "diagnostics": true,
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",        
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,        
        "outDir": "dist",
        "baseUrl": ".",
        "allowJs": true,
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types"
        ],        
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    // "include": [
        // "src/**/*",
        // "__mocks__/**/*"
    // ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}