import { FunctionContext, FunctionEvent, FunctionResponseObject } from '@8base/functions-types';


type ResolverResponse = FunctionResponseObject<{
  result: string,
}>;

export default (
  event: FunctionEvent<{ foo: string }>,
  ctx: FunctionContext,
): ResolverResponse => {
  return {
    data: {
      result: `Resolver received: ${event.data.foo}`,
    },
  };
};
